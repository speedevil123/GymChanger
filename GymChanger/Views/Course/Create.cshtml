@using GymChanger.ViewModels
@using Microsoft.AspNetCore.Identity
@using GymChanger.Data
@inject UserManager<AppUser> UserManager
@model CreateCourseViewModel
@{
    ViewData["Title"] = "Создать курс";
}
<form method="post" style="margin-top: 20px" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Название</label>
        <input asp-for="Title" class="form-control" placeholder="Название курса">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DayStart">День проведения</label>
        <input asp-for="DayStart" class="form-control" placeholder="01-31">
        <span asp-validation-for="DayStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MonthStart">Месяц проведения</label>
        <input asp-for="MonthStart" class="form-control" placeholder="янв, февр, апр и т.д">
        <span asp-validation-for="MonthStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeStart">Время начала</label>
        <input asp-for="TimeStart" class="form-control" placeholder="00:00 - 23:59">
        <span asp-validation-for="TimeStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeEnd">Время завершения</label>
        <input asp-for="TimeEnd" class="form-control" placeholder="00:00 - 23:59">
        <span asp-validation-for="TimeEnd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrainerId">Тренер</label>
        <select asp-for="TrainerId" class="form-control" asp-items="@ViewBag.TrainerList">
            <option>Выберите тренера</option>
        </select>
    </div>
    <button type="submit" style="font-size: 15px" class="btn btn-outline-success mt-2">Отправить</button>
</form>